<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="80dp"
    android:layout_marginTop="8dp">

    <TextView
        android:id="@+id/AfirstName"
        android:layout_width="198dp"
        android:layout_height="38dp"
        android:layout_marginTop="1dp"
        android:text="TextView"
        android:gravity="center"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.018"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/AlastName"
        android:layout_width="198dp"
        android:layout_height="38dp"
        android:layout_marginTop="1dp"
        android:text="TextView"
        android:gravity="center"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.636"
        app:layout_constraintStart_toEndOf="@+id/AfirstName"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/Agenres"
        android:layout_width="198dp"
        android:layout_height="38dp"
        android:layout_marginStart="4dp"
        android:text="TextView"
        android:gravity="center"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/AfirstName" />

        <TextView
            android:id="@+id/Aaward"
            android:layout_width="197dp"
            android:layout_height="37dp"
            android:layout_marginStart="4dp"
            android:text="TextView"
            android:gravity="center"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.375"
            app:layout_constraintStart_toEndOf="@+id/genres"
            app:layout_constraintTop_toBottomOf="@+id/AlastName"
            app:layout_constraintVertical_bias="0.25" />
</androidx.constraintlayout.widget.ConstraintLayout>